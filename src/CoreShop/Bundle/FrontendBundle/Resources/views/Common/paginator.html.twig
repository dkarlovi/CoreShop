{% import _self as generator %}
{% set pages = paginator.getPaginationData %}

{% if pages.pageCount > 1 %}
    <div class="row">
        <div class="col-sm-6 pagination-block">
            <ul class="pagination">
                {% if pages.previous is defined %}
                    {% if pages.previous %}
                        <li class="page-item"><a class="page-link" href="{{ pimcore_url({ page: pages.previous }) }}">«</a></li>
                    {% endif %}
                {% endif %}

                {% for page in pages.pagesInRange %}
                    <li class="page-item {% if page == pages.current  %} active {% endif %}"><a class="page-link" href="{{ pimcore_url({ page: page }) }}">{{ page }}</a></li>
                {% endfor %}

                {% if pages.next is defined %}
                    {% if pages.next %}
                        <li class="page-item"><a class="page-link" href="{{ pimcore_url({ page: pages.next }) }}">»</a></li>
                    {% endif %}
                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}
